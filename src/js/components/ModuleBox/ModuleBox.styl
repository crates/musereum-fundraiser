@require '~css/variables.styl'

.bf-module
  padding 0.25rem
  display flex

.bf-module-container
  flex 1
  background c-app-fg
  shadow()
  border-radius 6px
  position relative

.bf-module-header
  display flex
  align-items center
  border-bottom 1px solid #e1e8ee
  min-height 3.625rem

.bf-module-footer
  > div
    display flex
    justify-content center
    align-items center

    padding 0 1rem
    border-top 1px solid bc
    height 2rem
    background c-app-bg
    font-size 0.75rem
    color dim


.bf-module-title
  flex 1
  font-size 1.125rem
  padding 0 1.275rem 0 1.875rem
  font-weight 300

  white-space nowrap
  text-overflow ellipsis
  overflow hidden
  color #5e6977

.bf-module-menu
  display flex
  padding 0 1.875rem 0 1.275rem

  .pb-label
    color dim
  a
    font-size 0.75rem
    padding 0 0.25rem
    cursor pointer
    color link

.bf-module-main
  flex 1
  min-height 4.75rem
  .bf-kvs
    padding 0 !important

@media screen and (min-width: 768px)
  .bf-module-main
    font-size 1rem
    min-height 6.5rem