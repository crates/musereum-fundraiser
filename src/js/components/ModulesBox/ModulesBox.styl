@require '~css/variables.styl'

.bf-modules
  max-width 1024px
  margin 0 auto
  padding 0.25rem

  .bf-module
    flex 1 1 100%
    padding 0.25rem

  display flex
  flex-flow row wrap

@media screen and (min-width: 768px)
  .bf-modules
    padding 0.333rem

    .bf-module
      padding 0.333rem

      &.bf-module-sm
        flex 1 1 50%

@media screen and (min-width: 1024px)
  .bf-modules
    padding 0.375rem

    .bf-module
      padding 0.375rem