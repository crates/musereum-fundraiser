@require '~css/variables.styl'

.bf-form-group
  background c-app-fg
  padding 0.5rem 1rem
  border-bottom 1px solid bc
  &:last-of-type
    border-bottom none

  label
    display block
    font-size 0.875rem
    //font-weight 500
    font-weight 400
    padding 0.667rem 0 0.333rem
    line-height 1.25
    margin-bottom 0.375rem

  .bf-form-msg-error
    //display none

  &.error
    .bf-field
      border-color #f00
    .bf-form-msg-error
      display flex

@media screen and (min-width: 360px)
  .bf-form-group
    padding 0.625rem 1.25rem

@media screen and (min-width: 414px)
  .bf-form-group
    padding 0.725rem 1.5rem

@media screen and (min-width: 768px)
  .bf-form-group
    label
      //font-size 1rem
      font-size 0.9rem