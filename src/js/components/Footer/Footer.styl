@require '~css/variables.styl'

.app-footer
  flex 0 0 3rem
  font-size 0.75rem
  letter-spacing: 0.5px

  .container
    max-width 1024px
    margin 0 auto

    height 7.75rem

    display flex
    justify-content space-between
    align-items center

    > div
      padding 0 1rem
      color light
      line-height 1.5rem

    .about
      a
        padding-left 10px

      .tw-link
        color #1da1f2
        font-size 18px

      .fb-link
        color #3b5998
        font-size 18px
        padding-right 10px

@media screen and (max-width:360px)
  .app-footer
    font-size 0.875rem

@media screen and (max-width:4141px)
  .app-footer
    font-size 1rem