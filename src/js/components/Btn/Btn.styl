@require '~css/variables.styl'

.bf-btn-wrapper
  padding 0
  border none
  background transparent
  -webkit-appearance none
  margin 0
  outline 0
.bf-btn::before,
.bf-btn::after
  content ''
  flex 1 0 auto
.bf-btn
  letter-spacing 0.5px
  border-radius 5px
  font-size 13px
  font-weight 400
  height 3em
  line-height 1
  padding 0 0.75em
  margin 0
  background #fff
  border 1px solid #ccc
  cursor pointer
  user-select none
  display flex
  justify-content center
  align-items center
  -webkit-appearance none
  &:hover
    color #000
    text-decoration none
  &.bf-btn-icon-right
    flex-direction row-reverse
    .bf-btn-icon
      & + .bf-btn-value
        padding-left 0
        padding-right 0.5em
  &.bf-btn-link
    border-color transparent
    background transparent
    color #0c9
    padding 0 0.5em
    &:hover
      background transparent
  &.bf-btn-small
    font-size 0.75em
    height 1.5rem
    line-height 1rem
    padding 0 1rem
    i
      &.fa
        font-size 0.75rem
        line-height 1
  &.bf-btn-large
    font-size 1.125em
    height 3rem
    font-weight normal
    padding 0 1rem
  &.bf-theme-alpha-black
    color #fff
    background hsla(0,0%,0%,0.2)
    border none
    &:hover
      background hsla(0,0%,0%,0.3)
    &:active
      background hsla(0,0%,0%,0.4)
  &.bf-theme-tendermint
    color #fff
    background hsl(210,70%,38%)
    border none
    &:hover
      background hsl(210,70%,43%)
    &:active
      background hsl(210,70%,8%)

.bf-btn-icon
  font-size 1em
  line-height 1
  & + .bf-btn-value
    padding-left 0.5em

.bf-btn.disabled, .bf-btn[disabled]
  opacity 0.333
  cursor not-allowed
  user-select none
  color #999

.bf-btn.disabled:focus, .bf-btn[disabled]:focus
  outline none