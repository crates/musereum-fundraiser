{
  "presets": [["es2015", { "modules": false }], "stage-0", "react"],
  "plugins": [
    "lodash",
    [
      "transform-runtime", {
        "helpers": false,
        "polyfill": false
      }
    ],
    "transform-decorators-legacy",
    "transform-class-properties"
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    },
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
